# Functions for days

md() {
  mkdir "$1"
  cd "$1"
}

function picheck {
  ssh -q -o BatchMode=yes -o ConnectTimeout=5 illiac-local exit
  if [ $? -eq 0 ]; then     # If ILLIAC's available on the local network
    echo "illiac-local"           # Point to it
  else
    echo "illiac"                 # Otherwise, point to it via the internet
  fi
}

function backupmusic {
  target=$(picheck)
  echo "Backing up music to $target"
  rsync -rtuv --progress --delete $MUSIC/ $target:~/Music/
}

function returnmusic {
  target=$(picheck)
  echo "Returning music from $target"
  rsync -rtuv --progress $target:~/Music/ $MUSIC/
}

function scratchconvert {
  cd $GITFOLDER/ANWR/Scripts
  ./audioconv.sh
  cd -
}

function gpp {
  local sourcefile=$1
  local targetfile=$(echo $sourcefile | sed -e 's/cpp/run/')
  g++ -std=c++11 $sourcefile -o $targetfile
}
