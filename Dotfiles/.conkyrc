conky.config = {
  -- Conky Settings
  background = true,
  update_interval = 1,
  double_buffer = true,
  imlib_cache_size = 10,

  -- Window Settings
  gap_x = 0,
  gap_y = 0,
  maximum_width = 268,
  minimum_width = 268,
  alignment = 'top_right',
  own_window = true,
  own_window_type = 'desktop',
  own_window_transparent = true,
  own_window_argb_visual = true,
  own_window_argb_value = 255,
  border_inner_margin = 0,
  border_outer_margin = 0,

  -- Graphics Settings
  draw_shades = false,
  default_shade_color = AAAAAA,
  draw_outline = false,
  default_outline_color = AAAAAA,
  draw_borders = false,
  draw_graph_borders = false,
  show_graph_scale = false,
  show_graph_range = false,

  use_xft = true,
  xftalpha = 0,
  text_buffer_size = 256,
  override_utf8_locale = true,
}

conky.text = [[
  $nodename - $sysname $machine
  $hr
  ${color grey}uptime:$color $uptime
  ${color grey}CPU frequency :$color $freq_g GHz
  ${voffset 20}
  ${cpugraph 26,268 FFFFFF FFFFFF -l}
  CPU:${alignr}${cpu}%

  ${memgraph 26,268 FFFFFF FFFFFF -l}
  RAM:${alignr}${memperc}%

  ${diskiograph 26,268 FFFFFF FFFFFF -l}
  Disk I/O:${alignr}${diskio}

  $hr
  ${color grey}file systems:
  $color${fs_used /}/${fs_size /} ${fs_bar 6 /}
  $hr
  ${color1}Proc${color}${alignr}${color1}CPU %${color}
  ${color2}${top_mem name 1}${color}${alignr}${top cpu 1} %
  ${color2}${top_mem name 2}${color}${alignr}${top cpu 2} %
  ${color2}${top_mem name 3}${color}${alignr}${top cpu 3} %
  ${color2}${top_mem name 4}${color}${alignr}${top cpu 4} %
  ${color2}${top_mem name 5}${color}${alignr}${top cpu 5} %

  ${color1}Proc${color}${alignr}${color1}${color1}RAM${color}
  ${color2}${top_mem name 1}${color}${alignr}${top_mem mem_res 1}
  ${color2}${top_mem name 2}${color}${alignr}${top_mem mem_res 2}
  ${color2}${top_mem name 3}${color}${alignr}${top_mem mem_res 3}
  ${color2}${top_mem name 4}${color}${alignr}${top_mem mem_res 4}
  ${color2}${top_mem name 5}${color}${alignr}${top_mem mem_res 5}
]]
